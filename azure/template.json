{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceName": {
            "type": "string"
        },
        "configurationStorageConnectionString": {
            "type": "securestring"
        },
        "environmentName": {
            "type": "string"
        },
        "resourceEnvironmentName": {
            "type": "string"
        },
        "sharedServiceBusName": {
            "type": "string"
        },
        "sharedResourceGroupName": {
            "type": "string"
        },
        "sharedBackEndAppServicePlan": {
            "type": "string"
        },
        "aspSize": {
            "type": "string",
            "defaultValue": "1"
        },
        "aspInstances": {
            "type": "int",
            "defaultValue": 1
        },
        "aspSku": {
            "type": "string",
            "defaultValue": "Basic"
        },
        "loggingRedisConnectionString": {
            "type": "securestring"
        },
        "loggingRedisKey": {
            "type": "string"
        },
        "apiV1CustomHostName": {
            "type": "string"
        },
        "apiV1CertificateName": {
            "type": "string"
        },
        "apiV2CustomHostName": {
            "type": "string"
        },
        "apiV2CertificateName": {
            "type": "string"
        },
        "supportCustomHostName": {
            "type": "string"
        },
        "supportCertificateName": {
            "type": "string"
        },
        "apiTokenSecret": {
            "type": "securestring"
        },
        "apiIssuers": {
            "type": "string"
        },
        "apiAudiences": {
            "type": "string"
        },
        "metadataEndpoint": {
            "type": "string"
        },
        "appServiceAllowedIPs": {
            "type": "array",
            "defaultValue": [
            ]
        },
        "sharedKeyVaultName": {
            "type": "string"
        },
        "sharedManagementResourceGroup": {
            "type": "string"
        }
    },
    "variables": {
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/",
        "resourceNamePrefix": "[toLower(concat('das-', parameters('resourceEnvironmentName'),'-', parameters('serviceName')))]",
        "workerStorageAccountName": "[toLower(concat('das', parameters('resourceEnvironmentName'), parameters('serviceName'), 'wkrstr'))]",
        "apiV1AppServiceName": "[concat(variables('resourceNamePrefix'), 'api-v1-as')]",
        "apiV2AppServiceName": "[concat(variables('resourceNamePrefix'), 'api-as')]",
        "supportAppServiceName": "[concat(variables('resourceNamePrefix'), '-supp-as')]",
        "workerV1AppServiceName": "[concat(variables('resourceNamePrefix'), 'wkr-v1-as')]",
        "workerV2AppServiceName": "[concat(variables('resourceNamePrefix'), 'wkr-as')]",
        "workerAppServicePlanName": "[concat(variables('resourceNamePrefix'), 'wkr-asp')]",
        "serviceBusName": "[concat(variables('resourceNamePrefix'), '-ns')]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "storage-account",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'storage-account-arm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('workerStorageAccountName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "worker-app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[variables('workerAppServicePlanName')]"
                    },
                    "aspSize": {
                        "value": "[parameters('aspSize')]"
                    },
                    "aspInstances": {
                        "value": "[parameters('aspInstances')]"
                    },
                    "nonASETier": {
                        "value": "[parameters('aspSku')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-08-01",
            "name": "worker-v1-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('workerV1AppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('workerV1AppServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "worker-v1-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('workerV1AppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('workerAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "deployStagingSlot": {
                        "value": false
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('worker-v1-app-insights').outputs.InstrumentationKey.value]"
                            },
                            {
                                "name": "FUNCTIONS_WORKER_RUNTIME",
                                "value": "dotnet"
                            }
                        ]
                    },
                    "appServiceConnectionStrings": {
                        "value": [
                            {
                                "name": "AzureWebJobsStorage",
                                "connectionString": "[reference('storage-account').outputs.storageConnectionString.value]",
                                "type": "Custom"
                            }
                        ]
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('appServiceAllowedIPs')]"
                    }
                }
            },
            "dependsOn": [
                "worker-app-service-plan"
            ]
        },
        {
            "apiVersion": "2017-08-01",
            "name": "worker-v2-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('workerV2AppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('workerV2AppServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "worker-v2-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('workerV2AppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('workerAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "deployStagingSlot": {
                        "value": false
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('worker-v2-app-insights').outputs.InstrumentationKey.value]"
                            },
                            {
                                "name": "FUNCTIONS_WORKER_RUNTIME",
                                "value": "dotnet"
                            }                    
                        ]
                    },
                    "appServiceConnectionStrings": {
                        "value": [
                            {
                                "name": "AzureWebJobsStorage",
                                "connectionString": "[reference('storage-account').outputs.storageConnectionString.value]",
                                "type": "Custom"
                            }
                        ]
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('appServiceAllowedIPs')]"
                    }
                }
            },
            "dependsOn": [
                "worker-app-service-plan"
            ]
        },
        {
            "apiVersion": "2017-08-01",
            "name": "api-v1-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('apiV1AppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('apiV1AppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[greater(length(parameters('apiV1CustomHostName')), 0)]",
            "apiVersion": "2017-05-10",
            "name": "api-v1-app-service-certificate",
            "resourceGroup": "[parameters('sharedResourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('apiV1CertificateName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('sharedKeyVaultName')]"
                    },
                    "keyVaultResourceGroup": {
                        "value": "[parameters('sharedManagementResourceGroup')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "api-v1-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('apiV1AppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedBackEndAppServicePlan')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedResourceGroupName')]"
                    },
                    "deployStagingSlot": {
                        "value": true
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "ApiTokenSecret",
                                "value": "[parameters('apiTokenSecret')]"
                            },
                            {
                                "name": "ApiIssuers",
                                "value": "[parameters('apiIssuers')]"
                            },
                            {
                                "name": "ApiAudiences",
                                "value": "[parameters('apiAudiences')]"
                            },
                            {
                                "name": "MetadataEndpoint",
                                "value": "[parameters('metadataEndpoint')]"
                            },
                            {
                                "name": "CurrentTime",
                                "value": ""
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('api-v1-app-insights').outputs.InstrumentationKey.value]"
                            }
                        ]
                    },
                    "customHostName": {
                        "value": "[parameters('apiV1CustomHostName')]"
                    },
                    "certificateThumbprint": {
                        "value": "[if(greater(length(parameters('apiV1CustomHostname')), 0), reference('api-v1-app-service-certificate', '2018-11-01').outputs.certificateThumbprint.value, '')]"
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('appServiceAllowedIPs')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-08-01",
            "name": "api-v2-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('apiV2AppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('apiV2AppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[greater(length(parameters('apiV2CustomHostName')), 0)]",
            "apiVersion": "2017-05-10",
            "name": "api-v2-app-service-certificate",
            "resourceGroup": "[parameters('sharedResourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('apiV2CertificateName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('sharedKeyVaultName')]"
                    },
                    "keyVaultResourceGroup": {
                        "value": "[parameters('sharedManagementResourceGroup')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "api-v2-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('apiV2AppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedBackEndAppServicePlan')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedResourceGroupName')]"
                    },
                    "deployStagingSlot": {
                        "value": true
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('api-v2-app-insights').outputs.InstrumentationKey.value]"
                            },
                            {
                                "name": "WEBSITE_SWAP_WARMUP_PING_PATH",
                                "value": "/health"
                            },
                            {
                                "name": "WEBSITE_SWAP_WARMUP_PING_STATUSES",
                                "value": "200"
                            }
                        ]
                    },
                    "customHostName": {
                        "value": "[parameters('apiV2CustomHostName')]"
                    },
                    "certificateThumbprint": {
                        "value": "[if(greater(length(parameters('apiV2CustomHostname')), 0), reference('api-v2-app-service-certificate', '2018-11-01').outputs.certificateThumbprint.value, '')]"
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('appServiceAllowedIPs')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-08-01",
            "name": "support-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('supportAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('supportAppServiceName')]"
                    }
                }
            }
        },
        {
            "condition": "[greater(length(parameters('supportCustomHostName')), 0)]",
            "apiVersion": "2017-05-10",
            "name": "support-app-service-certificate",
            "resourceGroup": "[parameters('sharedResourceGroupName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-certificate.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "keyVaultCertificateName": {
                        "value": "[parameters('supportCertificateName')]"
                    },
                    "keyVaultName": {
                        "value": "[parameters('sharedKeyVaultName')]"
                    },
                    "keyVaultResourceGroup": {
                        "value": "[parameters('sharedManagementResourceGroup')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "support-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('supportAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('sharedBackEndAppServicePlan')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[parameters('sharedResourceGroupName')]"
                    },
                    "deployStagingSlot": {
                        "value": true
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('support-app-insights').outputs.InstrumentationKey.value]"
                            }
                        ]
                    },
                    "customHostName": {
                        "value": "[parameters('supportCustomHostName')]"
                    },
                    "certificateThumbprint": {
                        "value": "[if(greater(length(parameters('supportCustomHostname')), 0), reference('support-app-service-certificate', '2018-11-01').outputs.certificateThumbprint.value, '')]"
                    },
                    "ipSecurityRestrictions": {
                        "value": "[parameters('appServiceAllowedIPs')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('role-assignments-', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('sharedResourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'role-assignment.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "principalId": {
                        "value": "[createArray(reference('api-v2-app-service').outputs.managedServiceIdentityId.value, reference('api-v2-app-service').outputs.stagingManagedServiceIdentityId.value, reference('worker-v2-app-service').outputs.managedServiceIdentityId.value)[copyIndex()]]"
                    },
                    "assignmentType": {
                        "value": "ServiceBusOwner"
                    },
                    "resourceName": {
                        "value": "[parameters('sharedServiceBusName')]"
                    }
                }
            },
            "copy": {
                "name": "role-assignments",
                "count": 3
            }
        },
        {
            "name": "service-bus",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'), 'service-bus.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serviceBusNamespaceName": {
                        "value": "[variables('serviceBusName')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "ApiV1AppServiceName": {
            "type": "string",
            "value": "[variables('apiV1AppServiceName')]"
        },
        "ApiV2AppServiceName": {
            "type": "string",
            "value": "[variables('apiV2AppServiceName')]"
        },
        "WorkerV1AppServiceName": {
            "type": "string",
            "value": "[variables('workerV1AppServiceName')]"
        },
        "WorkerV2AppServiceName": {
            "type": "string",
            "value": "[variables('workerV2AppServiceName')]"
        },
        "SupportAppServiceName": {
            "type": "string",
            "value": "[variables('supportAppServiceName')]"
        },
        "ServiceBusName": {
            "type": "string",
            "value": "[variables('serviceBusName')]"
        }
    }
}