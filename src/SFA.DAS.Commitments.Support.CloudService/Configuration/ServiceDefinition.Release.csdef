<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="SFA.DAS.Commitments.Support.CloudService" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="SFA.DAS.Commitments.Support.SubSite" vmsize="Standard_D1_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="SecureEndpoint" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="ConfigurationStorageConnectionString" />
      <Setting name="LoggingRedisConnectionString" />
      <Setting name="EnvironmentName" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="SecureEndpoint" protocol="https" port="443" certificate="SSLCert" loadBalancer="das-scomt-lb"/>
    </Endpoints>
    <Certificates>
      <Certificate name="SSLCert" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
  </WebRole>
</ServiceDefinition>