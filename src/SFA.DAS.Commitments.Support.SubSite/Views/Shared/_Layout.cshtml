@using System.Globalization
@using System.Reflection
@using SFA.DAS.Support.Shared

<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="utf-8"/>
    <title>GOV.UK - The best place to find government services and information</title>
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" media="screen" href="/assets/stylesheets/govuk-template.css"/><!--<![endif]-->
    <!--[if IE 6]><link rel="stylesheet" media="screen" href="/assets/stylesheets/govuk-template-ie6.css"/><![endif]-->
    <!--[if IE 7]><link rel="stylesheet" media="screen" href="/assets/stylesheets/govuk-template-ie7.css"/><![endif]-->
    <!--[if IE 8]><link rel="stylesheet" media="screen" href="/assets/stylesheets/govuk-template-ie8.css"/><![endif]-->
    <link rel="stylesheet" media="print" href="/assets/stylesheets/govuk-template-print.css"/>
    <!--[if IE 8]><link rel="stylesheet" media="all" href="/assets/stylesheets/fonts-ie8.css"/><![endif]-->
    <!--[if gte IE 9]><!-->
    <link rel="stylesheet" media="all" href="/assets/stylesheets/fonts.css"/>
    <!--<![endif]-->
    <link href="@Url.Content("~/assets/stylesheets/govuk_elements/stylesheets/govuk-elements-styles.css")" rel="stylesheet" type="text/css" media="screen"/>
    <link href="@Url.Content("~/assets/stylesheets/application.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/assets/fontawesome-5.0.2/web-fonts-with-css/css/fontawesome-all.css")" rel="stylesheet"/>

    <!--[if lt IE 9]><script src="/assets/javascripts/ie.js"></script><![endif]-->
    <link rel="shortcut icon" href="@Url.Content("~/assets/images/favicon.ico")" type="image/x-icon"/>

    <link rel="mask-icon" href="@Url.Content("~/assets/images/gov.uk_logotype_crown.svg")" color="#0b0c0c">
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/assets/images/apple-touch-icon-180x180.png")" >
    <link rel="apple-touch-icon" sizes="167x167" href="@Url.Content("~/assets/images/apple-touch-icon-167x167.png")" >
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/assets/images/apple-touch-icon-152x152.png")" >
    <link rel="apple-touch-icon" href="@Url.Content("~/assets/images/apple-touch-icon.png")" >

    <meta name="theme-color" content="#0b0c0c"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:image" content="@Url.Content("~/assets/images/opengraph-image.png")">

</head>
<body>
    <!-- <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script> -->

    <div id="skiplink-container">
        <div>
            <a href="#content" class="skiplink">Skip to main content</a>
        </div>
    </div>
    <div id="global-cookie-message">

        <p>GOV.UK uses cookies to make the site simpler. <a href="https://www.gov.uk/help/cookies">Find out more about cookies</a></p>

    </div>

    <header role="banner" id="global-header" class="with-proposition">
        <div class="header-wrapper">
            <div class="header-global">
                <div class="header-logo">
                    <a href="/" title="Go to the apprenticeship service support portal homepage" id="no-logo" class="content">
                        Apprenticeship Service Console
                    </a>
                </div>
            </div>
            <div class="pull-right login-details">
               Console Support
            </div>
        </div>
    </header>
    <div id="global-header-bar"></div>


    <main id="content" role="main">

        @RenderBody()

    </main>

    <footer class="group js-footer" id="footer" role="contentinfo">
        <div class="footer-wrapper">

            <div class="footer-meta">
                <div class="copyright">
                    <!-- <a href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/copyright-and-re-use/crown-copyright/">© Crown copyright</a> -->
                </div>
                <div class="font-xsmall">
                    Version: 1.0001
                </div>
            </div>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/assets/javascripts/app.js")"></script>
    @RenderSection("script", false)

</body>
</html>