@using SFA.DAS.ProviderApprenticeshipsService.Web.Models

@model ExtendedApprenticeshipViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Update apprenticeship</h1>
        <hr />
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <form method="POST" action="@Url.Action("Update")">
            <div class="form-group">
                <label class="form-label" for="FirstName">First Name</label>
                <input class="form-control form-control-3-4" id="FirstName" name="FirstName" type="text"
                       aria-required="true" value="@Model.Apprenticeship.FirstName"/>
            </div>
            <div class="form-group">
                <label class="form-label" for="LastName">Last Name</label>
                <input class="form-control form-control-3-4" id="LastName" name="LastName" type="text"
                       aria-required="true" value="@Model.Apprenticeship.LastName" />
            </div>
            <div class="form-group">
                <label class="form-label" for="ULN">ULN</label>
                <input class="form-control form-control-3-4" id="ULN" name="ULN" type="text"
                       aria-required="true" value="@Model.Apprenticeship.ULN" />
            </div>
            <div class="form-group">
                <label class="form-label" for="cost">Cost</label>
                <input class="form-control form-control-3-4" id="cost" name="cost" type="number"
                       aria-required="true" value="@Model.Apprenticeship.Cost" />
            </div>
            <div class="form-group">
                <label class="form-label" for="TrainingId">Training</label>
                <select name="TrainingId" id="TrainingId" class="form-control" aria-label="Training standard">
                    <option value=""></option>
                    @foreach (var standard in Model.Standards)
                    {
                        <option value="@standard.Name" @if (standard.Name == Model.Apprenticeship.TrainingId)
                                                       {
                                                           @Html.Raw("selected=''");}>@standard.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold">Projected start date</span>
                    </legend>
                    <div class="form-date">
                        <div class="form-group form-group-month">
                            <label class="form-label" for="startMonth">Month</label>
                            <input class="form-control" id="startMonth" name="startMonth" type="number" 
                                   min="1" max="12" placeholder="MM" value="@Model.Apprenticeship.StartMonth">
                        </div>
                        <div class="form-group form-group-year">

                            <label class="form-label" for="startYear">Year</label>
                            <input class="form-control" id="startYear" name="startYear" type="number" 
                                   min="2016" max="2030" placeholder="YYYY" value="@Model.Apprenticeship.StartYear">
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="form-group">
            <fieldset>
                <legend>
                    <span class="form-label-bold" style="margin-bottom: 0; padding-bottom: 0">Projected finish date</span>
                </legend>
                <div class="form-date">
                    <div class="form-group form-group-month">
                        <label class="form-label" for="endMonth">Month</label>
                        <input class="form-control" id="endMonth" name="endMonth" type="number" 
                               min="1" max="12" placeholder="MM" value="@Model.Apprenticeship.EndMonth">
                    </div>
                    <div class="form-group form-group-year">
                        <label class="form-label" for="endYear">Year</label>
                        <input class="form-control" id="endYear" name="endYear" type="number" 
                               min="2016" max="2030" placeholder="YYYY" value="@Model.Apprenticeship.EndYear">
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="form-group">
            <label class="form-label" for="status">Status</label>
            <label class="" id="status" name="status" >@Model.Apprenticeship.Status</label>
        </div>
        <input type="hidden" id="agreementStatus" name="agreementStatus" value="@Model.Apprenticeship.AgreementStatus" />
        <input type="hidden" id="providerId" name="providerId" value="@Model.Apprenticeship.ProviderId" />
        <input type="hidden" id="commitmentId" name="commitmentId" value="@Model.Apprenticeship.CommitmentId" />
        <input type="hidden" id="id" name="id" value="@Model.Apprenticeship.Id" />
        <button type="submit" class="button">Update</button>
    </form>
    </div>
</div>